<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="editText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margens_items</item>
    </style>

    <style name="textView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margens_items</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="customEditText" parent="@style/editText">
        <item name="android:background">@drawable/edittext_circular</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>

    </style>

    <style name="radioButton" parent="@android:style/Widget.Material.Light.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margens_items</item>
    </style>

    <style name="layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margen_top_layout</item>
        <item name="android:padding">@dimen/margens_items</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tarjeta" parent="layout">
        <item name="android:background">@drawable/tarjeta</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">@dimen/margen_top_layout</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margens_items</item>
    </style>

    <style name="imageButton">
        <item name="android:layout_margin">@dimen/margens_items</item>
        <item name="android:background">@drawable/boton_circular</item>
        <item name="android:tint">@android:color/white</item>
    </style>

</resources>
